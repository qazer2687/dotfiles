{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": "./",
    "experimentalDecorators": true,
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
      "jsx": "react-jsx",
      "jsxImportSource": "/usr/share/astal/gjs/gtk3",
      "paths": {
        "astal": ["/usr/share/astal/gjs"],
        "astal/*": ["/usr/share/astal/gjs/*"],
        "@root": ["./"],
        "@assets/*": ["./assets/*"],
        "@widgets/*": ["./widgets/*"],
        "@services/*": ["./services/*"],
        "@themes/*": ["./themes/*"],
        "@windows/*": ["./windows/*"]
      }
    }
}
